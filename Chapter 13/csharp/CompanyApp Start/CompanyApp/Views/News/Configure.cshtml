@model LocationModel
@{
    ViewData["Title"] = "Configure";
    Layout = "_LayoutForLunch";
}
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>
<script src="~/js/newsConfiguration.js" asp-append-version="true"></script>

<h1>Welcome to our Company news app</h1>

<div>Please select your office location</div>

@foreach (var value in Enum.GetValues(typeof(Location)))
{
<div>
    @Html.RadioButtonFor(m => m.Location, value, new { @class = "e-primary" })
    @Html.Label(value.ToString())
</div>
}

<button type="button" class="btn btn-info btn-xs">Submit Order</button>
